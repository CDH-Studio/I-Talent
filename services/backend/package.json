{
  "name": "backend",
  "version": "1.0.0",
  "description": "I-Talent team",
  "main": "server.js",
  "scripts": {
    "start": "tsc && NODE_ENV=production node dist/index.js",
    "dev": "npx concurrently \"nodemon -e yml,js,json,ts src/server.ts\" \"yarn -s studio\"",
    "generate": "cd src/database && prisma generate",
    "migrate": "cd src/database && prisma migrate up --experimental -c",
    "migrate:create": "cd src/database && prisma migrate save --experimental",
    "dev:docker": "yarn -s generate && yarn -s migrate && yarn -s seed && yarn -s dev",
    "lint": "./node_modules/.bin/eslint src",
    "seed": "ts-node src/database/seeds",
    "studio": "cd src/database && prisma studio --experimental",
    "test": "ts-node ./tests/setupDatabase && cross-env NODE_ENV=test DATABASE_URL=$TEST_DATABASE_URL jest"
  },
  "author": "I-Talent team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "2.2.2",
    "@types/connect-redis": "^0.0.14",
    "@types/connect-timeout": "^0.0.34",
    "@types/cors": "^2.8.7",
    "@types/express-session": "^1.17.0",
    "@types/redis": "^2.8.25",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "connect-redis": "^5.0.0",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.0",
    "fuse.js": "^6.4.0",
    "keycloak-connect": "^10.0.2",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "redis": "^3.0.2",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@prisma/cli": "2.2.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/teardown.js"
    ],
    "globalSetup": "./tests/globalSetup.js",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js",
      "!./src/docs/**",
      "!./src/database/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 45,
        "statements": 45
      }
    },
    "coverageDirectory": "./tests/coverage"
  }
}
