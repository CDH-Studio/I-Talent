{
  "name": "backend",
  "version": "1.0.0",
  "description": "I-Talent team",
  "main": "server.js",
  "scripts": {
    "start": "(cd src/database && npx @prisma/cli generate) && node src/server.js",
    "dev": "npx concurrently \"nodemon -e yml,js,json src/server.js\" \"yarn -s studio\"",
    "generate": "cd src/database && prisma generate",
    "migrate": "cd src/database && prisma migrate up --experimental -c",
    "migrate:create": "cd src/database && prisma migrate save --experimental",
    "deploy": "yarn -s migrate && yarn -s seed && yarn -s start",
    "dev:docker": "yarn -s generate && yarn -s migrate && yarn -s seed && yarn -s dev",
    "lint": "./node_modules/.bin/eslint src",
    "seed": "node src/database/seeds",
    "studio": "cd src/database && prisma studio --experimental",
    "test": "node ./tests/setupDatabase && cross-env NODE_ENV=test DATABASE_URL=$TEST_DATABASE_URL jest"
  },
  "author": "I-Talent team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^2.2.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "connect-redis": "^4.0.4",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.0",
    "fuse.js": "^6.4.0",
    "keycloak-connect": "^10.0.2",
    "lodash": "^4.17.17",
    "moment": "^2.27.0",
    "redis": "^3.0.2",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.2.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/teardown.js"
    ],
    "globalSetup": "./tests/globalSetup.js",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js",
      "!./src/docs/**",
      "!./src/database/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 45,
        "statements": 45
      }
    },
    "coverageDirectory": "./tests/coverage"
  }
}
