{
  "testRegex": "(\\.|/)(spec|test){1}.(?!old.)js?$",
  "testEnvironment": "node",
  "setupFiles": [ "./tests/setup.js" ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.js",
    "!./src/docs/**",
    "!./src/database/**",
    "!./src/config.js",
    "!./src/server.js"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 60,
      "branches": 14,
      "functions": 50,
      "lines": 61
    }
  },
  "coverageDirectory": "./tests/coverage"
}
