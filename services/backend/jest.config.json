{
  "testRegex": "(\\.|/)(spec|test){1}.(?!old.)js?$",
  "testEnvironment": "node",
  "setupFiles": [ "./tests/setup.js" ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.js",
    "!./src/docs/**",
    "!./src/database/**"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 39,
      "statements": 38,
      "branch": 12,
      "functions": 17
    }
  },
  "coverageDirectory": "./tests/coverage"
}
