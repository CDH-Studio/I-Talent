{
  "testRegex": "(\\.|/)(spec|test){1}.(?!old.)js?$",
  "testEnvironment": "node",
  "setupFiles": ["./tests/setup.js"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.js",
    "!./src/docs/**",
    "!./src/database/**",
    "!./src/config.js",
    "!./src/server.js"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 79,
      "branches": 39,
      "functions": 69,
      "lines": 80
    }
  },
  "coverageDirectory": "./tests/coverage"
}
