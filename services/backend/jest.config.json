{
  "testRegex": "(\\.|/)(spec|test){1}.(?!old.)js?$",
  "testEnvironment": "node",
  "setupFiles": [ "./tests/setup.js" ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.js",
    "!./src/docs/**",
    "!./src/database/**"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 35,
      "statements": 35
    }
  },
  "coverageDirectory": "./tests/coverage"
}
