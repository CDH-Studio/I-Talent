/*******************************
         Site Overrides
*******************************/
.ui[class*="vertically divided"].grid > .row:before {
  position: absolute;
  content: "";
  top: 0em;
  left: 0px;

  width: calc(100% - 10rem);
  height: 4px;

  margin: 0% (10rem / 2);
  box-shadow: 0px 2px 0px @blue;
}

.ui.grid  {
    margin-top: -1rem;
    margin-bottom: -1rem !important;
    margin-left: -1rem;
    margin-right: -1rem;
}